<% layout("layout/boilerplate") %>

    <div class="row mt-4 mb-1">
        <div class=" col-6">
            <img class="img-fluid"
                src="https://images.unsplash.com/photo-1544536871-6e891baa163f?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=634&q=80"
                alt="view">
        </div>
        <div class="col-6">
            <div class="card">
                <h5 class="card-header">
                    <%=comment.username%>'s comment:
                </h5>
                <div class="card-body">
                    <p class="card-text">
                        <%= comment.text %>
                    </p>
                    <form action="/comments/<%=comment._id%>?_method=DELETE" method="POST">
                        <a class="btn btn-primary" href="/comments">Back</a>
                        <a class="btn btn-info text-white" href="/comments/<%=comment._id%>/edit">Edit</a>
                        <button class="btn btn-danger d-inline">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>